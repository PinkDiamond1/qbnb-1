<div class = "container">
  <div class="row">
    <h3> Add Property </h3>
    <form class="col s12" method="post">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Address" name="address" id="address" type="text" class="validate">
          <label for="address">Address</label>
        </div>
        <div class="input-field col s6">
          <input placeholder="Price" name="price" id="price" type="text" class="validate">
          <label for="price">Price</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <select name = "property_type">
            <option value="" disabled selected>Choose the Property Type</option>
            {{#property_types}}
            {{#.}}
            <option value="{{id}}">{{name}}</option>
            {{/.}}
            {{/property_types}}
          </select>
          <label>Property Type</label>
        </div>
        <div class="input-field col s6">
          <select name = "district">
            <option value="" disabled selected>Choose the District</option>
            {{#district}}
            {{#.}}
            <option value="{{id}}">{{name}}</option>
            {{/.}}
            {{/district}}
          </select>
          <label>District</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s4">
          <select name = "features-1">
            <option value="" disabled selected>Choose a Feature</option>
            {{#features}}
            {{#.}}
            <option value="{{id}}">{{name}}</option>
            {{/.}}
            {{/features}}
          </select>
          <label>Feature One</label>
        </div>
        <div class="input-field col s4">
          <select name = "features-2">
            <option value="" disabled selected>Choose a Feature</option>
            {{#features}}
            {{#.}}
            <option value="{{id}}">{{name}}</option>
            {{/.}}
            {{/features}}
          </select>
          <label>Feature Two</label>
        </div>
        <div class="input-field col s4">
          <select name = "features-3">
            <option value="" disabled selected>Choose a Feature</option>
            {{#features}}
            {{#.}}
            <option value="{{id}}">{{name}}</option>
            {{/.}}
            {{/features}}
          </select>
          <label>Feature Three</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Create
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
    <script>
      $(document).ready(function() {
        $('select').material_select();
      });
    </script>
  </div>
</div>
